<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view16"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/item_mentors_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/card_color"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="0dp"
                android:layout_height="160dp"
                android:background="@color/purple_200"
                android:clickable="true"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView72"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/img_cover"
                app:layout_constraintStart_toStartOf="@+id/img_cover"
                app:srcCompat="@drawable/circle" />

            <RatingBar
                android:id="@+id/mentor_rating"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:rating="4"
                app:layout_constraintBottom_toBottomOf="@+id/tv_mentor_name"
                app:layout_constraintEnd_toStartOf="@+id/tv_total_reviews"
                app:layout_constraintTop_toTopOf="@+id/tv_mentor_name" />

            <TextView
                android:id="@+id/tv_total_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(00)"
                android:textColor="@color/gray"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/mentor_rating"
                app:layout_constraintEnd_toStartOf="@+id/guideline124"
                app:layout_constraintTop_toTopOf="@+id/mentor_rating" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_mentor2"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:background="@drawable/default_user"
                app:layout_constraintBottom_toBottomOf="@+id/imageView72"
                app:layout_constraintEnd_toEndOf="@+id/imageView72"
                app:layout_constraintStart_toStartOf="@+id/imageView72"
                app:layout_constraintTop_toTopOf="@+id/imageView72" />

            <TextView
                android:id="@+id/tv_mentor_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Mentor's name"
                android:textColor="@color/gray"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/img_cover" />

            <TextView
                android:id="@+id/tv_mentor_job"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Mentor's job"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/tv_mentor_name" />

            <TextView
                android:id="@+id/tv_city_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/tv_mentor_job" />

            <TextView
                android:id="@+id/tv_mentor_gem_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="00"
                android:textColor="@color/purple_500"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/text"
                app:layout_constraintStart_toEndOf="@+id/text" />

            <TextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Gem Points : "
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/tv_city_name" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Summary :"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/tv_specialized_skills" />

            <TextView
                android:id="@+id/textView58"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Specialized Skills :"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/tv_industry3" />

            <TextView
                android:id="@+id/tv_summary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="This is summary text"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline124"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/textView55" />

            <TextView
                android:id="@+id/tv_specialized_skills"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Specialized skills"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline124"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/textView58" />

            <Button
                android:id="@+id/btn_select"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="select"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline124"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/tv_summary" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline123"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="8dp" />

            <TextView
                android:id="@+id/tv_industry1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_corner_bg"
                android:padding="2dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="industry1"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline123"
                app:layout_constraintTop_toBottomOf="@+id/text" />

            <TextView
                android:id="@+id/tv_industry2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/rounded_corner_bg"
                android:padding="2dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="industry2"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_industry1"
                app:layout_constraintStart_toEndOf="@+id/tv_industry1" />

            <TextView
                android:id="@+id/tv_industry3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:background="@drawable/rounded_corner_bg"
                android:padding="2dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:text="industry3"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/tv_industry2"
                app:layout_constraintStart_toEndOf="@+id/tv_industry2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline124"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="8dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>