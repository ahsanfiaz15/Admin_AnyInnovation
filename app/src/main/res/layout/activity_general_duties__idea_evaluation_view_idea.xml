<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_700"
    tools:context=".general_duties.academy.GeneralDuties_IdeaEvaluationViewIdea">

    <ImageView
        android:id="@+id/imageView50"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView50">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn_download_submitted_idea"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="view"
                android:textSize="10sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView240"
                app:layout_constraintEnd_toStartOf="@+id/guideline90" />

            <Button
                android:id="@+id/btn_download_submitted_prototype"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="view"
                android:textSize="10sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView241"
                app:layout_constraintEnd_toStartOf="@+id/guideline90" />

            <TextView
                android:id="@+id/textView240"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Submitted Idea"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/btn_download_submitted_idea"
                app:layout_constraintStart_toStartOf="@+id/guideline89"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView241"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Submit prototype / proof of concept / minimum viable product"
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/btn_download_submitted_prototype"
                app:layout_constraintStart_toStartOf="@+id/guideline89"
                app:layout_constraintTop_toBottomOf="@+id/btn_download_submitted_idea" />

            <TextView
                android:id="@+id/textView286"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Industry : "
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline89"
                app:layout_constraintTop_toBottomOf="@+id/textView241" />

            <TextView
                android:id="@+id/textView71"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Idea Evaluated on : "
                android:textColor="@color/white"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/guideline89"
                app:layout_constraintTop_toBottomOf="@+id/tv_idea_details" />

            <TextView
                android:id="@+id/tv_industry"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="industry1, industry2"
                android:textColor="@color/purple_500"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView286"
                app:layout_constraintEnd_toStartOf="@+id/guideline90"
                app:layout_constraintStart_toEndOf="@+id/textView286" />

            <TextView
                android:id="@+id/tv_evaluated_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="4dp"
                android:text="D/M/Y"
                android:textColor="@color/purple_500"
                android:textSize="12sp"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView71"
                app:layout_constraintEnd_toStartOf="@+id/guideline90"
                app:layout_constraintStart_toEndOf="@+id/textView71" />

            <TextView
                android:id="@+id/tv_idea_details"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4dp"
                android:text="Details about this idea"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@+id/guideline90"
                app:layout_constraintStart_toStartOf="@+id/guideline89"
                app:layout_constraintTop_toBottomOf="@+id/tv_industry" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline90"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="20dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline89"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="20dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>